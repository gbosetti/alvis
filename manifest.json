{
	"manifest_version": 2,
	"name": "infovis",
	"version": "0.0.1",
	"homepage_url": "https://bitbucket.org/gabybosetti/infovis",
	"description": "",
	
	"icons": {
    "48": "src/resources/infovis-logo.png"
  },
  	"permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js", 
      "src/background/RelatedTableManager.js"
    ]
  },

   "content_scripts": [{
      "matches": ["<all_urls>"],
      "css":[
        "src/content_scripts/css/class-style.css"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "src/content_scripts/js/SingleHeadedTableStrategy/SingleHeadedTableStrategy.js",
        "src/content_scripts/js/StrategyCluster.js" ,
        "src/content_scripts/js/TableManager.js"
      ]
    }],

  "browser_action": {
    "default_icon": "src/resources/infovis-logo.png",
    "default_title": "Infovis"
  }
}


