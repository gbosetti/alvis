{
	"manifest_version": 2,
	"name": "infovis",
	"version": "0.0.1",
	"homepage_url": "https://bitbucket.org/gabybosetti/infovis",
	"description": "",
  "default_locale": "en",
	
	"icons": {
    "48": "resources/images/infovis-logo.png"
  },
  	

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "https://*/",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background/hot-reload.js",
      "background/storage/Storage.js",
      "background/storage/LocalStorage.js",
      "background/StorageManager.js",
      "background/BackgroundManager.js",
      "background/main.js"
    ]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css":[
      "content_scripts/css/class-style.css"
    ],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "content_scripts/js/ExtractionStrategies/AbstractStrategy.js",
      "content_scripts/js/ExtractionStrategies/SingleHeadedTableStrategy.js",
      "content_scripts/js/DatasetExtractor.js",
      "content_scripts/js/main.js"
    ],
    "all_frames": true
  }],

  "browser_action": {
    "default_icon": "resources/images/infovis-logo.png",
    "default_title": "Infovis"
  },

  "web_accessible_resources": [
    "resources/*",
    "visualizer/dist/*"
  ]
}
