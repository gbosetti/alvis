{
	"manifest_version": 2,
	"name": "infovis",
	"version": "0.0.1",
	"homepage_url": "https://bitbucket.org/gabybosetti/infovis",
	"description": "",
	
	"icons": {
    "48": "resources/infovis-logo.png"
  },
  	"permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background/hot-reload.js",
      "background/RelatedTableManager.js",
      "background/main.js"
    ]
  },

   "content_scripts": [{
      "matches": ["<all_urls>"],
      "css":[
        "content_scripts/css/class-style.css"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "content_scripts/js/SingleHeadedTableStrategy/SingleHeadedTableStrategy.js",
        "content_scripts/js/NoHeaderListStrategy/NoHeaderListStrategy.js",
        "content_scripts/js/StrategyCluster.js" ,
        "content_scripts/js/TableManager.js"
      ]
    }],

  "browser_action": {
    "default_icon": "resources/infovis-logo.png",
    "default_title": "Infovis"
  }
}
